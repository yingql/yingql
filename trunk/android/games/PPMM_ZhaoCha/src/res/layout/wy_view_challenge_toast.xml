<LinearLayout 	
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center_vertical"
	android:paddingLeft="10dp"
	android:paddingRight="12dp"
	android:paddingTop="10dp"
	android:paddingBottom="13dp"
	android:background="@drawable/wy_toast_bg"
	android:clickable="true">

	<!-- wiyun logo -->
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="1dp"
		android:layout_gravity="top"
		android:src="@drawable/wy_toast_logo"/>
		
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_marginLeft="3dp"
		android:orientation="vertical"
		android:gravity="center_vertical">

		<!-- toast text -->
		<TextView
			android:id="@+id/wy_tv_toast"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			style="@android:style/TextAppearance.Medium"/>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="6dp"
			android:orientation="horizontal"
			android:gravity="center_vertical">

			<!-- later button -->
			<Button
				android:id="@+id/wy_b_challenge_later"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/wy_dialog_button"
				android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
				android:textStyle="bold"
				android:text="@string/wy_button_later"/>
				
			<!-- show button -->
			<Button
				android:id="@+id/wy_b_show_challenge"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginLeft="10dp"
				android:background="@drawable/wy_dialog_button_blue"
				style="@style/TextAppearance.Medium.Shadow"
				android:textStyle="bold"
				android:text="@string/wy_button_show_challenge"/>
				
		</LinearLayout>
				
	</LinearLayout>
	
</LinearLayout>
